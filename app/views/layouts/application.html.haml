!!!
%html
	%head
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
			%title
				ThinkSmart
			= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
			= javascript_include_tag 'application', 'data-turbolinks-track' => true
			= csrf_meta_tags
			= yield(:head)

	%body{:class => "#{controller_name} #{action_name}"}
		= render 'registrations/sign_up_modal'
		= render 'registrations/log_in_modal'
		.wrapper
			%nav.row.navigation
				.col-xs-6.col-sm-4.col-md-2
					= link_to(root_path) do
						.logo
				
				.col-xs-6.col-sm-8.col-md-10
					.menu
						= link_to('Descubrir', projects_path)
						= link_to('Empezar un proyecto', new_project_path)
						.pull-right
							- if city
								= link_to(cities_path) do
									%span.icon.icon-earth-globe-streamline
									%span.hidden-xs
										#{city.name}, #{city.country}
							- else
								= link_to(cities_path) do
									%span.icon.icon-earth-globe-streamline
									%span.hidden-xs
										Elegir Ciudad
							%a.toggle-nav(href="#")
								%span.icon-menu
								%span.hidden-xs
									Menu
							- if user_signed_in?
								.dropdown
									%button.dropdown-toggle.btn{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
										#{current_user.name}
										%span.caret
									%ul.dropdown-menu
										%li
											= link_to('Editar Perfil', edit_user_registration_path)
										- if current_user.role?(:admin)
											%li
												= link_to "Administracion", admin_root_path
										%li
											= link_to('Cerrar Sesion', destroy_user_session_path, method: :delete)
							- else
								= link_to "Iniciar SesiÃ³n", "#login", "data-toggle" => "modal", :class => 'btn btn-default'
							
			.site-menu
				%a.toggle-nav(href="#")
					X
				= link_to('Home', root_path)
				= link_to('Ciudades', cities_path)
				- if city
					= link_to('Publicaciones', city_posts_path(city))
					= link_to('Proyectos', city_projects_path(city))
				- else
					= link_to('Publicaciones', posts_path)
					= link_to('Proyectos', projects_path)

				%a
					About
				%a.mini
					Contacto
				%a.mini
					Preguntas Frecuentes
				%a.mini
					Terminos y Condiciones
			.site-canvas
				= yield
				.row.footer
					.row
						%h1
							Building better cities together
					.row
						%p
							Todavia no estas registrado?
							%button.btn.btn-default
								Registrate Ahora
							en ThinkSmart
