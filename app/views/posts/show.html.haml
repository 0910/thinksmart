= render 'shared/categories'
%section
	.container
		.row
			.item-wrap
				.row.no-gutter.bg-darkest-gray
					.col-md-7
						.swiper-container
							.swiper-wrapper
								- @post.images.each do |image|
									.swiper-slide{:style => "background-image: url(#{image.file.url(:high)})"}
							.swiper-pagination
							.swiper-button-next
							.swiper-button-prev
					.col-md-5.bg-darkest-gray
						.section-box.section-box-padding.no-gutter
							%p.section-body.date
								#{@post.created_at.to_date.to_formatted_s(:long)}
							%h2.section-heading
								#{@post.title}
							%p.section-body
								#{@post.subtitle}
							
						.row.status-box.icons.text-center
							.col-md-12
								.col-xs-4.col-sm-12.col-md-4.category
									= link_to(post_path(@post), class: 'cat-icon') do
										#{image_tag "cat_icons/#{@post.category.name}.svg"}
										%h1
											#{@post.category.name}
								.col-xs-4.col-sm-12.col-md-4.target
									.cat-icon
										#{image_tag "cat_icons/target.svg"}
										%h1
											- @post.targets.each do |target|
												#{target.name}
								.col-xs-4.col-sm-12.col-md-4.health
									.cat-icon
										#{image_tag "cat_icons/#{@post.project_type.name}.svg"}
										%h1
											#{@post.project_type.name}
				.row.no-gutter
					.col-md-12
						.col-md-7
							.section-box-padding
								%p.section-body
									#{@post.description}
								%h2.section-title
									Problemas que soluciona
								%p.section-body
									#{@post.solved_problems}
								%h2.section-title
									Beneficios
								%p.section-body
									#{@post.benefit}
						.col-md-5.bg-light-gray
							.section-box-padding
								%h2.section-title
									Areas en la que aplica
									%br
									—
								%ul
									- @post.subcategories.each do |subcategory|
										%li
											%p
												#{subcategory.title}

								%h2.section-title
									Link de interés
									%br
									—
								%p.section-body
									#{@post.link}
					

%section.bg-white.collapsed#bottom-nav
	.container
		.row.no-gutter
			.col-xs-12.col-sm-3.col-md-3.hidden-xs
				= link_to('← Noticia Anterior',@previous, class: 'post-nav')
			.col-xs-12.col-sm-6.col-md-6
				.item-actions
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon.icon-map-streamline-user
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon.icon-like-love-streamline
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon.icon-envellope-mail-streamline
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon-man-people-streamline-user
			.col-xs-12.col-sm-3.col-md-3.hidden-xs
				= link_to('Noticia Siguiente →',@next, class: 'post-nav pull-right')


/javascript functions

:javascript
	$(function(){
			var swiper = new Swiper('.swiper-container', {
				pagination: '.swiper-pagination',
				paginationClickable: true,
				nextButton: '.swiper-button-next',
				prevButton: '.swiper-button-prev',
				loop: true
			});
	});