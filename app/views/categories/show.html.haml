

/featured projects

.row.featured
	.col-md-6.featured-slide
		.row
			%ul.slider
				- @category.projects.each do |project|
					%li
						.row.slide
							.col-sm-12.col-md-12
								- if project.images.empty?
									.row.photo{:style => "background-image: url(image-not-available.jpg)"}
								- else
									- project.images.each do |image|
										- if image.cover == true
											.row.photo{:style => "background-image: url(#{image.file.url(:large)})"}
	.col-md-6.featured-titles							
		.row
			%ul.slider
				- @category.projects.each do |project|
					%li.slide
						.info
							.row
								%p.date
									#{project.created_at.to_date.to_formatted_s(:long)}
							.row
								= link_to(truncate(project.title, :length => 70), city_category_project_path(city,@category,project))
								%p
									#{simple_format truncate(project.description, :length => 420)}
							.row.bottom
								.col-xs-6.col-sm-4.col-md-4
									= link_to(city_category_project_path(city,@category,project), class: 'cat-icon') do
										#{image_tag "cat_icons/#{project.category.name}.svg"}
										#{project.category.name}
								.col-sm-4.col-md-4.hidden-xs.actions-box
									.actions
										.action
											%a.icon.icon-map-streamline-user
										.action
											%a.icon.icon-like-love-streamline
										.action
											%a.icon.icon-envellope-mail-streamline
								.col-xs-6.col-sm-4.col-md-4
									%p.user
										%i.icon.icon-man-people-streamline-user
										= link_to(project.user.name, '#')

/ projects list

.row
	.col-md-12.projects-list
		.row.title
			.col-md-12
				%h1
					Proyectos en
					%span
						Buenos Aires.
		.row
			- @category.projects.each do |project|
				.col-md-6.item
					.row
						.col-sm-6.col-md-6.info
							.row
								.col-xs-6.col-md-6
									%p.date
										#{project.created_at.to_date.to_formatted_s(:long)}
								.col-xs-6.col-md-6
									= link_to(city_category_project_path(city,@category,project), class: 'cat-icon') do
										#{image_tag "cat_icons/#{project.category.name}.svg"}
										#{project.category.name}
							.row.header
								= link_to(truncate(project.title, :length => 70), city_category_project_path(city,@category,project))
							.row.bottom	
								.col-xs-6.col-md-6
									.actions
										.action
											%a.icon.icon-map-streamline-user
										.action
											%a.icon.icon-like-love-streamline
										.action
											%a.icon.icon-envellope-mail-streamline
								.col-xs-6.col-md-6
									%p.user
										%i.icon.icon-man-people-streamline-user
										= link_to(project.user.name, '#')
						.col-sm-6.col-md-6
							- if project.images.empty?
								.row.photo{:style => "background-image: url(image-not-available.jpg)"}
							- else
								- project.images.each do |image|
									- if image.cover == true
										.row.photo{:style => "background-image: url(#{image.file.url(:large)})"}

/javascript functions

:javascript
	$(function() {
		var slider = $('.featured-titles .slider').bxSlider({
			auto: false,
			pause: 5000,
			useCSS:true,
			easing: 'cubic-bezier(.74,.14,.44,.71)',
			pager:false,
			controls:false
		});
		$('.featured-slide .slider').bxSlider({
			auto: false,
			pause: 5000,
			useCSS:true,
			easing: 'cubic-bezier(.74,.14,.44,.71)',
				nextText: '→',
				prevText: '←',
			onSlidePrev: function(){
				slider.goToPrevSlide();
			},
			onSlideNext: function(){
				slider.goToNextSlide();
			}
		});
	});
