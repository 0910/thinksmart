:javascript
	$(function() {
		windowHeight = $(window).height();
		fadeStart = 0;
		fadeUntil = windowHeight;
		showingStats = false;

		var slider = $('.featured-titles .slider').bxSlider({
			auto: false,
			pause: 5000,
			useCSS:true,
			easing: 'cubic-bezier(.74,.14,.44,.71)',
			pager:false,
			controls:false,
			onSlidePrev: function(){
				slider2.goToPrevSlide();
			},
			onSlideNext: function(){
				slider2.goToNextSlide();
			}
		});
		var slider2 = $('.featured-slide .slider').bxSlider({
			auto: false,
			pause: 5000,
			useCSS:true,
			easing: 'cubic-bezier(.74,.14,.44,.71)',
				nextText: '→',
				prevText: '←',
			onSlidePrev: function(){
				slider.goToPrevSlide();
			},
			onSlideNext: function(){
				slider.goToNextSlide();
			}
		});
		$('.posts-list .slider').bxSlider({
			useCSS:true,
			easing: 'cubic-bezier(.74,.14,.44,.71)',
			nextSelector: '#next-news',
				prevSelector: '#prev-news',
				nextText: '→',
				prevText: '←',
				pager: false

		});
		$('.projects-list .slider').bxSlider({
			useCSS:true,
			easing: 'cubic-bezier(.74,.14,.44,.71)',
			nextSelector: '#next-projects',
				prevSelector: '#prev-projects',
				nextText: '→',
				prevText: '←',
				pager: false
			});
		});
		$(window).on("scroll", function() {
			var fadeStart;
			var offset = $(document).scrollTop()
			    ,opacity=0
			;
			if( offset<=fadeStart ){
			    opacity=1;
			}else if( offset<=fadeUntil ){
			    opacity=1-offset/(fadeUntil*0.5);
			}
			$('.splash .center').css('opacity',opacity);
			if ($(this).scrollTop() > 100) {
				if (showingStats == false){
					$('.circle').circliful();
					men = $('.mengraph').data('value');
					women = $('.womengraph').data('value');
					$('.men .percent').css('width', men + '%');
					$('.women .percent').css('width', women + '%');
					showingStats = true;
				}
			}
		});