/ Splash Screen

- city.images.each do |image|
	.splash{:style => "background-image: url(#{image.file.url(:high)})"}
		.center
			%h1
				#{city.title}
			%p
				#{city.subtitle}
			%button.btn.btn-default
				Be Smart!
		.row.start
			.col-xs-12.col-sm-6.col-md-6.search.hidden-xs
				.title
					%h1
						%i.icon.icon-search
						Busca publicaciones, proyectos o ciudades.
				
			.col-xs-12.col-sm-6.col-md-6.location
				.title
					= link_to(cities_path) do
						%i.icon.icon-earth-globe-streamline
						Estas en 
						%span
							#{city.name}, #{city.country}
						%span.caret

.row.city-resume
	.col-sm-3.col-md-3.box
		.row
			%h2
				Indice Smart City
		.row
			%h1
				#{city.ranking} /
				%span
					#{@cities.size} ciudades.
		
	.col-sm-5.col-md-6.box
		.row
			%h2 
				Poblacion
				%span
					#{city.population} hab.
		.row.population
			.col-md-6
				.row
					.col-md-12
						.col-xs-7.col-sm-7.col-md-7
							.row.men
								= image_tag('men.png')
								.percent
						.col-xs-5.col-sm-5.col-md-5
							%h3
								#{city.man}
							%p
								hombres
			.col-md-6
				.row
					.col-md-12
						.col-xs-7.col-sm-7.col-md-7
							.row.women
								= image_tag('women.png')
								.percent
						.col-xs-5.col-sm-5.col-md-5
							%h3
								#{city.woman}
							%p
								mujeres
	.col-sm-4.col-md-3.box
		.row
			.col-xs-4.col-md-4.chart
				.circle{"data-bgcolor" => "#eee", "data-dimension" => "100", "data-fgcolor" => "#61a9dc", "data-fill" => "#ddd", "data-fontsize" => "18", "data-info" => "participacion", "data-percent" => "35", "data-text" => "35%", "data-width" => "7"}
			.col-xs-4.col-md-4.chart
				.circle{"data-bgcolor" => "#eee", "data-dimension" => "100", "data-fgcolor" => "#61a9dc", "data-fill" => "#ddd", "data-fontsize" => "18", "data-info" => "smart develop", "data-percent" => "15", "data-text" => "15%", "data-width" => "7"}
			.col-xs-4.col-md-4.chart
				.circle{"data-bgcolor" => "#eee", "data-dimension" => "100", "data-fgcolor" => "#61a9dc", "data-fill" => "#ddd", "data-fontsize" => "18", "data-info" => "visitantes", "data-percent" => "15", "data-text" => "15%", "data-width" => "7"}

.row.featured
	.col-md-6.featured-titles							
		.row
			%ul.slider
				- @projects.each do |project|
					%li.slide
						.info
							.row
								%p.date
									#{project.created_at.to_date.to_formatted_s(:long)}
							.row
								= link_to(truncate(project.title, :length => 70), city_project_path(city,project))
								%p
									#{simple_format truncate(project.description, :length => 420)}
							.row.bottom
								.col-xs-6.col-sm-4.col-md-4
									= link_to(city_project_path(city,project), class: 'cat-icon') do
										#{image_tag "cat_icons/#{project.category.name}.svg"}
										#{project.category.name}
								.col-xs-4.col-sm-4.col-md-4.hidden-xs
									.actions-box
										.actions
											.action
												%a.icon.icon-map-streamline-user
											.action
												%a.icon.icon-like-love-streamline
											.action
												%a.icon.icon-envellope-mail-streamline
								.col-xs-6.col-sm-4.col-md-4
									%p.user
										%i.icon.icon-man-people-streamline-user
										= link_to(project.user.name, '#')
											
	.col-md-6.featured-slide
		.row
			%ul.slider
				- @projects.each do |project|
					%li
						.row.slide
							.col-sm-12.col-md-12
								- if project.images.empty?
									.row.photo{:style => "background-image: url(image-not-available.jpg)"}
								- else
									- project.images.each do |image|
										- if image.cover == true
											.row.photo{:style => "background-image: url(#{image.file.url(:large)})"}

/ Posts & Projects

.row
	.col-xs-12.col-sm-12.col-md-6.projects-list
		.row.title
			.col-sm-10.col-md-10
				%h1
					Proyectos en
					%span
						Buenos Aires.
			.col-sm-1.col-md-1.hidden-xs	
				#prev-projects
			.col-sm-1.col-md-1.hidden-xs	
				#next-projects
		.row.sliderbox
			%ul.slider
				- @projects.in_groups_of(2, false).each do |slide|
					%li.slide
						- slide.each do |project|
							.col-md-12.item
								.row
									.col-sm-6.col-md-6.info
										.row
											.col-xs-6.col-md-6
												%p.date
													#{project.created_at.to_date.to_formatted_s(:long)}
											.col-xs-6.col-md-6
												= link_to(city_project_path(city,project), class: 'cat-icon') do
													#{image_tag "cat_icons/#{project.category.name}.svg"}
													#{project.category.name}
										.row.header
											= link_to(truncate(project.title, :length => 70), city_project_path(city,project))
										.row.bottom	
											.col-xs-6.col-md-6
												.actions
													.action
														%a.icon.icon-map-streamline-user
													.action
														%a.icon.icon-like-love-streamline
													.action
														%a.icon.icon-envellope-mail-streamline
											.col-xs-6.col-md-6
												%p.user
													%i.icon.icon-man-people-streamline-user
													= link_to(project.user.name, '#')
									.col-sm-6.col-md-6
										- if project.images.empty?
											.row.photo{:style => "background-image: url(image-not-available.jpg)"}
										- else
											- project.images.each do |image|
												- if image.cover == true
													.row.photo{:style => "background-image: url(#{image.file.url(:large)})"}
	.col-xs-12.col-sm-12.col-md-6.posts-list
		.row.title
			.col-sm-10.col-md-10
				%h1
					Novedades en
					%span
						Buenos Aires.
			.col-sm-1.col-md-1.hidden-xs	
				#prev-news
			.col-sm-1.col-md-1.hidden-xs	
				#next-news
		.row.sliderbox
			%ul.slider
				- @posts.in_groups_of(2, false).each do |slide|
					%li.slide
						- slide.each do |post|
							.col-sm-6.col-md-6.item
								- if post.images.empty?
									.row.photo{:style => "background-image: url(image-not-available.jpg)"}
								- else
