/project slider
- if (@project.user = current_user ) && (@project.status = 'pending')
	.row.pending.hidden
		%p
			Este Proyecto se encuentra en etapa de aprovacion. Este proceso tarda un maximo de 48hs habiles.
			= link_to('Editar Proyecto', edit_project_path(@project))
= render 'shared/categories'
%section
	.container
		.row
			.item-wrap
				.row.no-gutter.bg-darkest-gray
					.col-md-7
						.swiper-container
							.swiper-wrapper
								- @project.images.each do |image|
									.swiper-slide{:style => "background-image: url(#{image.file.url(:high)})"}
							.swiper-pagination
							.swiper-button-next
							.swiper-button-prev
					.col-md-5.bg-darkest-gray
						.section-box.section-box-padding.no-gutter
							%p.section-body.date
								#{@project.created_at.to_date.to_formatted_s(:long)}
							%h2.section-heading
								#{@project.title}
							%p.section-body
								#{@project.subtitle}
							.status
								%h2.section-subtitle
									Status:
									%span
										#{@project.phase.name}
								%h2.section-subtitle
									Avance:
									%span
										#{@project.advance}%
							
						.row.status-box.icons.text-center
							.col-md-12
								.col-xs-4.col-sm-12.col-md-4.category
									= link_to(project_path(@project), class: 'cat-icon') do
										#{image_tag "cat_icons/#{@project.category.name}.svg"}
										%h1
											#{@project.category.name}
								.col-xs-4.col-sm-12.col-md-4.target
									.cat-icon
										#{image_tag "cat_icons/target.svg"}
										%h1
											- @project.targets.each do |target|
												#{target.name}
								.col-xs-4.col-sm-12.col-md-4.health
									.cat-icon
										#{image_tag "cat_icons/#{@project.project_type.name}.svg"}
										%h1
											#{@project.project_type.name}
				.row.no-gutter
					.col-md-7
						.section-box-padding
							%h2.section-title
								Acerca del proyecto
							%p.section-body
								#{@project.description}
							%h2.section-title
								Problemas que soluciona
							%p.section-body
								#{@project.solved_problems}
							%h2.section-title
								Beneficios
							%p.section-body
								#{@project.benefit}
					.col-md-5.bg-light-gray
						.section-box-padding
							%h2.section-title
								Areas en la que aplica
								%br
								—
							%ul
								- @project.subcategories.each do |subcategory|
									%li
										%p
											#{subcategory.title}
							%h2.section-title
								Partners
								%br
								—
							%p.section-body
								#{@project.partners}

							%h2.section-title
								Colaborar con el proyecto
								%br
								—
							%p.section-body
								#{@project.collaboration}

							%h2.section-title
								Link de interés
								%br
								—
							%p.section-body
								#{@project.link}
				

%section.bg-white.collapsed#bottom-nav
	.container
		.row.no-gutter
			.col-xs-12.col-sm-3.col-md-3.hidden-xs
				= link_to('← Novedad Anterior',@previous, class: 'project-nav')
			.col-xs-12.col-sm-6.col-md-6
				.item-actions
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon.icon-map-streamline-user
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon.icon-like-love-streamline
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon.icon-envellope-mail-streamline
					.col-xs-3.col-sm-3.col-md-3.action
						%a.icon-man-people-streamline-user
			.col-xs-12.col-sm-3.col-md-3.hidden-xs
				= link_to('Novedad Siguiente →',@next, class: 'project-nav pull-right')


/javascript functions

:javascript
	$(function(){
			var swiper = new Swiper('.swiper-container', {
				pagination: '.swiper-pagination',
				paginationClickable: true,
				nextButton: '.swiper-button-next',
				prevButton: '.swiper-button-prev',
				loop: true
			});
	});