.row
  .col-md-12.cities-list
    .row.title
      .col-md-12
        %h1
          Editar
          %span
            Perfil
.row
  .col-md-6.col-md-offset-3
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .row
        = devise_error_messages!
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        .row
          Currently waiting confirmation for: = resource.unconfirmed_email
      .row
        .form-group
          = f.label :name, 'Nombre', class: 'control-label'
          = f.text_field :name, autofocus: true, class: 'form-control'
      .row
        .form-group
          = f.label :email, class: 'control-label'
          = f.email_field :email, class: 'form-control'
      .row
        .form-group
          = f.label :current_password, 'Contrase単a Actual', class: 'control-label'
          = f.password_field :current_password, autocomplete: "off", class: 'form-control'
      .row
        .form-group
          = f.label :password, 'Nueva Contrase単a', class: 'control-label'
          = f.password_field :password, autocomplete: "off", class: 'form-control'
          %p Si no queres cambiar tu contrase単a, deja este campo en blanco.
      .row
        .form-group
          = f.label :password_confirmation, 'Confirmar Nueva Contrase単a', class: 'control-label'
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
      .row
        .form-group
          = f.submit "GUARDAR PERFIL", class: 'btn btn-success'
.row
  .col-md-6.col-md-offset-3
    %h3 Cancelar mi cuenta
    %p
      No estas feliz?
      = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete


