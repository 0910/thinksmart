        	nextSelector: '#next-projects',
  			prevSelector: '#prev-projects',
  			nextText: '→',
  			prevText: '←',
  			pager: false
        });
    });
    $(window).on("scroll", function() {
		if ($(this).scrollTop() > 100) {
			$('.navigation').addClass('white');
		}
		else {
			$('.navigation').removeClass('white');
		}
	});
</script>