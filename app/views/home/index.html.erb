<script>
    $(function() {
    	$('.splash').parallax("50%", 0.1);
        $('.circle').circliful();
        $('.featured-slide .slider').bxSlider({
        	auto: true,
        	pause: 5000,
        	useCSS:true,
        	easing: 'cubic-bezier(.74,.14,.44,.71)',
  			nextText: '→',
  			prevText: '←'
        });
        $('.news .slider').bxSlider({
        	useCSS:true,
        	easing: 'cubic-bezier(.74,.14,.44,.71)',
        	nextSelector: '#next-news',
  			prevSelector: '#prev-news',
  			nextText: '→',
  			prevText: '←',
  			pager: false

        });
        $('.projects_resume .slider').bxSlider({
