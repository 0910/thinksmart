/ Splash Screen

.splash
	.center
		%h1
			Think
			%span
				Smart
			es una red social
			%br
			de ciudadanos y ciudades.
		%p
			Sumate y ayudanos a generar conciencia
			%br
			sobre el espacio que habitamos!
		%button.btn.btn-default
			Be Smart!

/ City Selector

.row.start
	.col-md-6.search
		.title
			%h1
				%i.icon.icon-earth-globe-streamline
				Busca publicaciones, proyectos o ciudades.
		
	.col-md-6.location
		.title
			= link_to(cities_path) do
				%i.icon.icon-earth-globe-streamline
				Estas en Buenos Aires,
				%span
					Argentina.
				%span.caret

.row.city-resume
	.col-md-3
		.row
			%h2
				Indice Smart City
		.row
			%h1
				5 /
				%span
					10 ciudades.
		
	.col-md-6
		.row
			%h2 
				Poblacion
				%span
					3.085.275 hab.
		.row.population
			.col-md-6
				.row
					.col-md-12
						.col-xs-7.col-sm-7.col-md-7
							.row.men
								= image_tag('men.png')
								.percent
						.col-xs-5.col-sm-5.col-md-5
							%h3
								46.49%
							%p
								hombres
			.col-md-6
				.row
					.col-md-12
						.col-xs-7.col-sm-7.col-md-7
							.row.women
								= image_tag('women.png')
								.percent
						.col-xs-5.col-sm-5.col-md-5
							%h3
								46.49%
							%p
								mujeres
	.col-md-3
		.row
			.col-xs-6.col-md-4.chart
				.circle{"data-bgcolor" => "#eee", "data-dimension" => "100", "data-fgcolor" => "#61a9dc", "data-fill" => "#ddd", "data-fontsize" => "18", "data-info" => "participacion", "data-percent" => "35", "data-text" => "35%", "data-width" => "7"}
			.col-xs-6.col-md-4.chart
				.circle{"data-bgcolor" => "#eee", "data-dimension" => "100", "data-fgcolor" => "#61a9dc", "data-fill" => "#ddd", "data-fontsize" => "18", "data-info" => "smart develop", "data-percent" => "15", "data-text" => "15%", "data-width" => "7"}
			.col-xs-6.col-md-4.chart
				.circle{"data-bgcolor" => "#eee", "data-dimension" => "100", "data-fgcolor" => "#61a9dc", "data-fill" => "#ddd", "data-fontsize" => "18", "data-info" => "visitantes", "data-percent" => "15", "data-text" => "15%", "data-width" => "7"}

.row.title
	.col-md-12
		%h1
			Destacados en
			%span
				Esta ciudad.
.row.featured.cyan
	.col-md-6.featured-titles							
		.row
			.row
				%ul.slider
					- @projects.each do |project|
						%li
							.row.slide.info
								.col-sm-12.col-md-12
									.row
										%h1
											#{truncate(project.title, :length => 70)}
										%p
											#{simple_format truncate(project.description, :length => 600)}
									.row
										.col-xs-12.col-md-3
											.action
												%a.icon.icon-map-streamline-user
											.action
												%a.icon.icon-like-love-streamline
											.action
												%a.icon.icon-envellope-mail-streamline
										.col-xs-12.col-md-9
											%p.user
												#{project.user.email}
											%p.date
												#{project.created_at.to_date.to_formatted_s(:long)}
	.col-md-6.featured-slide
		.row
			%ul.slider
				- @projects.each do |project|
					%li
						.row.slide
							.col-sm-12.col-md-12
								.row.photo
									- if project.images.empty?
										= image_tag('image-not-available.jpg')
									- else
										- project.images.each do |image|
											- if image.cover == true
												= image_tag(image.file.url(:large))

/ Posts & Projects

.row
	.col-md-6.posts-list
		.row.title
			.col-md-10
				%h1
					Novedades en
					%span
						Buenos Aires.
			.col-md-1.hidden-xs	
				#prev-news
			.col-md-1.hidden-xs	
				#next-news
		.row.sliderbox
			%ul.slider
				- @posts.in_groups_of(2, false).each do |slide|
					%li.slide
						- slide.each do |post|
							.col-md-6
								.row.photo
									- if post.images.empty?
										= image_tag('image-not-available.jpg')
									- else
										- post.images.each do |image|
											- if image.cover == true
												= image_tag(image.file.url(:small))
								.row.info
									.row.header
										= link_to(truncate(post.title, :length => 70), post_path(post))
									.row
										.col-xs-6.col-sm-6.col-md-6
											%p.user
												#{post.user.email}
										.col-xs-6.col-sm-6.col-md-6
											%button.btn.btn-primary
												#{post.category.name}
									.row.actions
										.col-xs-6.col-md-6
											.action
												%a.icon.icon-map-streamline-user
											.action
												%a.icon.icon-like-love-streamline
											.action
												%a.icon.icon-envellope-mail-streamline
										.col-xs-6.col-md-6
											%p.date
												#{post.created_at.to_date.to_formatted_s(:long)}
	.col-md-6.projects-list
		.row.title
			.col-md-10
				%h1
					Proyectos en
					%span
						Buenos Aires.
			.col-md-1.hidden-xs	
				#prev-projects
			.col-md-1.hidden-xs	
				#next-projects
		.row.sliderbox
			%ul.slider
				- @projects.in_groups_of(2, false).each do |slide|
					%li.slide
						- slide.each do |project|
							.col-md-12.item
								.row
									.col-sm-6.col-md-6.info
										.row
											.row.header
												= link_to(truncate(project.title, :length => 70), project_path(project))
											.row
												.col-xs-6.col-sm-6.col-md-6
													%p.user
														#{project.user.email}
												.col-xs-6.col-sm-6.col-md-6
													%button.btn.btn-primary
														#{project.category.name}
											.row.actions
												.col-xs-6.col-md-6
													.action
														%a.icon.icon-map-streamline-user
													.action
														%a.icon.icon-like-love-streamline
													.action
														%a.icon.icon-envellope-mail-streamline
												.col-xs-6.col-md-6
													%p.date
														#{project.created_at.to_date.to_formatted_s(:long)}
									.col-sm-6.col-md-6
										.row.photo
											- if project.images.empty?
												= image_tag('image-not-available.jpg')
											- else
												- project.images.each do |image|
													- if image.cover == true
														= image_tag(image.file.url(:small))

